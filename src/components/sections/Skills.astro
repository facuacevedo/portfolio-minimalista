---
import Section from "../Section.astro";

import { skills } from '@cv'
---

<Section title="Skills">
    <ul>
        {
            skills.map( ({name, url}) => {
                return (
                    <div>
                        <li>
                            <span>{name}</span>
                        </li>
                        <img src={url} alt={name} />
                    </div>
                )
            })
        }

    </ul>
</Section>

<style>
    ul{
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    div{
        display: flex;
        flex-direction: column-reverse;
        align-items: center;
        gap: 3px;
    }

    li{
        border-radius: 6px;
        background: #696969;
        color: white;
        font-size: 1rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
        
    }
    img{
		width: 32px;
        height: 32px;
	}
</style>